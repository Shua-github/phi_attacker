<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 显示文件内容的 TextView -->
    <TextView
        android:id="@+id/file_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="卡密在这里显示"
        android:textSize="16sp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp" />

    <!-- 请求权限按钮 -->
    <Button
        android:id="@+id/check_permission_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求权限"
        android:layout_below="@id/file_content_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- 读取文件按钮 -->
    <Button
        android:id="@+id/read_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得卡密"
        android:layout_below="@id/check_permission_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- 连接到 Shizuku 服务的按钮 -->
    <Button
        android:id="@+id/connect_shizuku_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接 Shizuku"
        android:layout_below="@id/read_file_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
